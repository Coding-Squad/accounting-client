<h3>{{model.name}} transactions</h3>
<button class="btn btn-primary" data-toggle="modal" data-target="#newTransactionModal">New transaction</button>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Transfer</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Date</td>
      <td>Description</td>
      <td>Transfer</td>
      <td>Value</td>
    </tr>
  </tbody>
</table>

<!-- select2: http://jsfiddle.net/7573va8p/17/ -->

<div class="modal" id="newTransactionModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cancel"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Transaction</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-xs-3">
              <label for="transaction-date" class="control-label">Date</label>
              <input type="datetime" class="form-control" id="transaction-date">
            </div>
          </div>
          <div class="row">
            <div class="col-xs-3">
              <label for="transaction-account" class="control-label">Account</label>
            </div>
            <div class="col-xs-3">
              <label for="transaction-amount" class="control-label">Amount</label>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-3">
              {{account-select rootAccount=rootAccount}}
            </div>
            <div class="col-xs-3">
              <input type="text" class="form-control" id="transaction-amount">
            </div>
          </div>
          <div class="row">
            <div class="col-xs-3">
              {{account-select rootAccount=rootAccount}}
            </div>
            <div class="col-xs-3">
              <input type="text" class="form-control" id="transaction-amount">
            </div>
          </div>
          <div class="form-group">
            <label for="transaction-description" class="control-label">Description</label>
            <textarea class="form-control" id="transaction-description"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Post transaction</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->