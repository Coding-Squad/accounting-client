<button class="btn btn-primary" {{action "showTransactionModal"}}>
  New transaction
</button>

<h3>{{model.account.name}} entries</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Transfer</th>
      <th>Value</th>
      <th>Sum</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.entries as |entry|}}
      <tr>
        <td>
          {{format-date entry.occurredOn}}
        </td>
        <td>
          {{entry.description}}
        </td>
        <td>
          {{entry.account.name}}
        </td>
        <td style="text-align: right">
          {{format-number entry.amount}}
        </td>
        <td style="text-align: right">
          {{format-number entry.sum}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{transaction-modal-component show=showTransactionModal transaction=transaction rootAccount=(readonly model.rootAccount) post=(action "post") cancel=(action "cancel")}}
